:: groomingControl [nobr widget]

<<widget "changeHairstyle">>
<<silently>>
<<set _propName = $args[0]>>
<<set _command = "<<set $groom.hairStyle = $hairStyle." + _propName + ">>">>
<<set _timecmd = "<<set _time = $hairStyle." + _propName + "[2]>>">>
<<print _timecmd>>
<<addTime _time>>
<</silently>>
<<print _command>>
<</widget>>

<<widget "applyMakeupEye">>
<<silently>>
<<if ndef $args[0]>><<set alert('apply eye makeup function no args')>><</if>>
<<set _styleName = $args[0]>>
<<set _retcmd = "<<set _style = $makeup.eye." + _styleName + ">>">>
<<print _retcmd>>
<<if $skill.art >= _style[5]>>
	<<set _sc = 3>>
	<<set _atr = _style[2]>>
	<<set _txt = _style[0]>>
<<elseif _style[6] == -1>>
	<<set _sc = 0>>
	<<set _atr = _style[2]>>
	<<set _txt = _style[0]>>
<<else>>
	<<SCX>><<SC "AS" _style[4]>><<SC "AS" _style[4] 2>>
	<<if $SCresult[1]>>
		<<set _sc = 3>>
		<<set _atr = _style[2]>>
		<<set _txt = _style[0]>>
	<<elseif $SCresult[2]>>
		<<set _sc = 2>>
		<<set _scText = either("poorly-done ","amatuerish ","botched ","uneven ")>>
		<<set _txt = _scText + _style[0]>>
		<<set _max = Math.round(_style[2]/3)>>
		<<set _atr = random(0,_max)>>
	<<else>>
		<<set _sc = 1>>
		<<set _scText = either("awful ","ugly ","clownish ")>>
		<<set _txt = _scText + _style[0]>>
		<<set _atr = random(0,_style[2])>>
		<<set _atr *= -1>>
		<<set _atr -= 1>>
	<</if>>
	<<SCX>>
<</if>>
<<set $groom.eyeMU = []>>
<<set $groom.eyeMU.push(_txt)>>
<<set $groom.eyeMU.push(_atr)>>
<<set $groom.eyeMU.push(_sc)>>
<<set $groom.eyeMU.push(_style[3])>>
<<set $groom.eyeMU.push(_style[4])>>
<<set $groom.eyeMU.push(_style[5])>>
<<set $groom.eyeMU.push(_style[6])>>
<<set $groom.eyeMU.push(_style[7])>>
<</silently>>
<<addTime _style[3]>>
<<makeupCombine>>
<</widget>>

